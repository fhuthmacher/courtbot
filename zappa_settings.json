{
    "prod": {
        "app_function": "courtbot.app",
        "aws_region": "us-east-1",
        // TODO: Use this to prune old Lambda versions.
        // https://github.com/Miserlou/Zappa/issues/254
        // "callbacks": {
        //     "post": "courtbot.post_callback",
        // },
        "events": [{
            "function": "courtbot.scheduled_book",
            // Book courts for Tuesdays and Thursdays, a day in advance
            // 10:05 UTC = 6:05 AM EDT (UTC -4)
            // 11:05 UTC = 6:05 AM EST (UTC -5)
            // https://docs.aws.amazon.com/lambda/latest/dg/tutorial-scheduled-events-schedule-expressions.html
            "expression": "cron(5 10 ? * MON,WED *)"
        }],
        "exception_handler": "courtbot.exception_handler",
        "exclude": [
            "__pycache__",
            ".flake8",
            ".gitignore",
            ".python-version",
            ".travis.yml",
            "LICENSE",
            "Makefile",
            "README.md",
            "requirements.txt",
            "zappa_settings.json",
        ],
        "keep_warm": true,
        "keep_warm_expression": "rate(5 minutes)",
        "memory_size": 128,
        "profile_name": "default",
        "project_name": "courtbot",
        "runtime": "python3.6",
        "s3_bucket": "courtbot",
        "timeout_seconds": 120,
    }
}
