{
  "name": "courtbot",
  "version": "1.0.0",
  "description": "Bot for reserving squash courts.",
  "scripts": {
    "test": "eslint .",
    "encrypt": "cd courtbot && serverless encrypt --stage dev --password",
    "decrypt": "cd courtbot && serverless decrypt --stage dev --password",
    "deploy": "cd courtbot && serverless deploy --stage dev",
    "deploy:router": "cd courtbot && serverless deploy function -f router --stage dev",
    "deploy:look": "cd courtbot && serverless deploy function -f look --stage dev",
    "deploy:book": "cd courtbot && serverless deploy function -f book --stage dev",
    "logs": "cd courtbot && serverless logs --stage dev -t",
    "logs:router": "npm run logs -- -f router",
    "logs:look": "npm run logs -- -f look",
    "logs:book": "npm run logs -- -f book",
    "list": "cd courtbot && serverless deploy list --stage dev",
    "functions": "cd courtbot && serverless deploy list functions --stage dev",
    "info": "cd courtbot && serverless info --stage dev",
    "metrics": "cd courtbot && serverless metrics --stage dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rlucioni/courtbot.git"
  },
  "author": "Renzo Lucioni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rlucioni/courtbot/issues"
  },
  "homepage": "https://github.com/rlucioni/courtbot#readme",
  "dependencies": {
    "serverless": "1.19.0",
    "serverless-plugin-warmup": "3.0.5-rc.1",
    "serverless-prune-plugin": "1.1.1",
    "serverless-secrets-plugin": "0.0.1"
  },
  "devDependencies": {
    "eslint": "4.4.1",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-node": "5.1.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "3.0.1"
  }
}
